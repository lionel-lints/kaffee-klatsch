<h2>KaffeeKlatsch</h2>
<div ng-controller="ExampleController">
  <form novalidate class="simple-form">
    <label for="coffeeInput">How many cups of coffee have you had today?</label>
    <input type="radio" name="coffeeInput" ng-model="user.coffee" value="0" ng-change='newValue(value)' />
    <input type="radio" name="coffeeInput" ng-model="user.coffee" value="1" ng-change='newValue(value)' />
    <input type="radio" name="coffeeInput" ng-model="user.coffee" value="2" ng-change='newValue(value)' />
    <input type="radio" name="coffeeInput" ng-model="user.coffee" value="3" ng-change='newValue(value)' />
    <input type="radio" name="coffeeInput" ng-model="user.coffee" value="4" ng-change='newValue(value)' />
    <input type="radio" name="coffeeInput" ng-model="user.coffee" value="5" ng-change='newValue(value)' />
    <input type="radio" name="coffeeInput" ng-model="user.coffee" value="6" ng-change='newValue(value)' />
    <input type="radio" name="coffeeInput" ng-model="user.coffee" value="7" ng-change='newValue(value)' />
    <input type="radio" name="coffeeInput" ng-model="user.coffee" value="8" ng-change='newValue(value)' />
    <input type="submit" ng-click="update(user)" value="Save" />
  </form>
  <pre>user = {{user | json}}</pre>
  <pre>master = {{master | json}}</pre>
</div>
