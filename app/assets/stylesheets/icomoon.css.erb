@font-face {
    font-family: 'icomoon';
    src:    url("<%= font_path('icomoon.eot') %>");
    src:    url("<%= font_path('icomoon.eot?#iefix') %>") format('embedded-opentype'),
        url("<%= font_path('icomoon.ttf') %>") format('truetype'),
        url("<%= font_path('icomoon.woff') %>") format('woff'),
        url("<%= font_path('icomoon.svg#icomoon') %>") format('svg');
    font-weight: normal;
    font-style: normal;
}

[class^="icon-"], [class*=" icon-"] {
    /* use !important to prevent issues with browser extensions that change fonts */
    font-family: 'icomoon' !important;
    speak: none;
    color: white;
    font-style: normal;
    font-weight: normal;
    font-variant: normal;
    text-transform: none;
    line-height: 1;
    font-size: 180%;
    margin-left: 20px;
    margin-bottom: -30px;
    /* Better Font Rendering =========== */
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

